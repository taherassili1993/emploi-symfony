{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function (){
            $('#agences .owl-carousel').owlCarousel({
                loop:true,
                margin: 30,
                responsiveClass:true,
                responsive:{
                    0:{
                        items:1,
                        nav:true
                    },
                    600:{
                        items:2,
                        nav:true
                    },
                    1000:{
                        items:2,
                        nav:true,
                    }
                },
                navText : ['<p>< next</p>','<p>prev ></p>']
            });
        });
    </script>

{% endblock %}