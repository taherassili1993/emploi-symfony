{% extends 'base.html.twig' %}

{% block titre %}{% endblock%}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock%}

{% block body %}

    <section id="introduction">
        <p>Trouver un emploi Ã  meilleur salaire.</p>
        <p>Consulter la liste de nos emplois facilement.</p>
    </section>

    <section id="agences">
        <div class="container-fluid" id="agence-container">
            <div class="row">
                <div class="col-sm-12 agence-title">
                    <h3>Nos emplois</h3>
                </div>
            </div>

            <div class="row owl-carousel">

                {% for emploi in emplois %}
                    <div class="col-sm-12" style='margin-bottom: 150px;'>
                        <div>
                            <div class="list-group-horizontal" style='min-height: 280px;'>

                                <div class="list-group-item-image">
                                    <div class="agence-image">
                                        <a title="..." href="{{ path('emploi', {'id': emploi.getId()}) }}">

                                            <img src="{{ asset('img/default-agence.jpg') }}" alt="">

                                        </a>
                                    </div>
                                </div>

                                <div class="list-group-item">
                                    <div class="agence-info">
                                        <h2><a href="{{ path('emploi', {'id': emploi.getId()}) }}" class="agence-info-link">{{ emploi.getTitre() }}</a></h2>

                                        <div class="agence-desc">
                                            <p>{{ emploi.getDescription()|slice(0, 300) }}</p>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function (){
            $('#agences .owl-carousel').owlCarousel({
                loop:true,
                margin: 30,
                responsiveClass:true,
                responsive:{
                    0:{
                        items:1,
                        nav:true
                    },
                    600:{
                        items:2,
                        nav:true
                    },
                    1000:{
                        items:2,
                        nav:true,
                    }
                },
                navText : ['<p>< next</p>','<p>prev ></p>']
            });
        });
    </script>

{% endblock %}